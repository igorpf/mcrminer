<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.mcrminer.ui.controller.ProjectsTabController"
          prefWidth="600.0">
    <children>
        <ScrollPane fx:id="projectScrollPane" fitToHeight="true" >
            <content>
                <VBox fx:id="projectVBox">
                    <children>
                        <ListView fx:id="projectList" >
                        </ListView>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <VBox>
            <children>
                <Label text="%tab.projects.export.select.label"/>
                <ChoiceBox fx:id="perspectivesChoiceBox"/>
            </children>
        </VBox>

        <ScrollPane fx:id="statisticsScrollPane" fitToHeight="true"  >
        </ScrollPane>
    </children>
</HBox>
